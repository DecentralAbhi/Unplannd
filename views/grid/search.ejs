<% layout("/layouts/boilerplate") %>
<style>
    /* --- Root Variables for Theme Consistency --- */
    :root {
        --retro-bg: wheat; /* Main background and outer box */
        --retro-text: #1F2937; /* Dark text for contrast */
        --retro-accent-red: #d1451e; /* From box shadow, button hover */
        --retro-accent-yellow: #FFD93D; /* From previous accent, price underline */
        --retro-primary-teal: #2F9C95; /* From your card background */
        --retro-secondary-light: #fff; /* From box shadow white */
        --retro-shadow-dark: #000; /* From box shadow black */
        --retro-shadow-light: rgba(0, 0, 0, 0.2); /* For softer elements, box-shadow opacity */

        /* Fonts */
        --font-primary: "Inter", sans-serif;
        --font-heading-retro: 'Press Start 2P', cursive; /* For titles and buttons */

        /* Transitions */
        --transition-fast: 0.2s ease;
        --transition-medium: 0.3s ease;
        --transition-slow: 0.6s ease;
    }

    /* --- General Body Styling --- */
    body {
        background-color: var(--retro-bg);
        font-family: var(--font-primary);
        color: var(--retro-text);
        margin: 0;
        padding: 0;
        min-height: 100vh; /* Ensure body takes full height */
        display: flex; /* Use flexbox to center content */
        justify-content: center; /* Center horizontally */
        align-items: center; /* Center vertically */
        box-sizing: border-box; /* Include padding/border in element's total width/height */
    }

    /* Pixelated image rendering for that retro feel */
    img {
        image-rendering: pixelated;
        image-rendering: -moz-crisp-edges;
        image-rendering: -o-crisp-edges;
        image-rendering: -webkit-optimize-contrast;
        -ms-interpolation-mode: nearest-neighbor;
        /* Optional: for a "true" pixel font look on some text, consider: */
        /* -webkit-font-smoothing: none; */
        /* -moz-osx-font-smoothing: grayscale; */
    }

    /* --- Outer Container: .events-page-container --- */
    /* This new container will manage the overall page layout and outer spacing */
    .events-page-container {
        display: flex;
        justify-content: center; /* Center the box within this container */
        align-items: flex-start; /* Align content to the top */
        padding: 2rem; /* General padding around the entire content */
        background-color: var(--retro-bg); /* Matches body background */
        font-family: var(--font-primary);
        color: var(--retro-text);
        min-height: 100vh;
        width: 100%; /* Take full width */
        box-sizing: border-box;
    }

    /* --- The "Box" Container: .retro-events-box --- */
    /* This is the main wrapper with the distinct retro border effect */
    .retro-events-box {
        width: 100%; /* It will take up the available width within .events-page-container */
        max-width: 1400px; /* Limit max width for very large screens */
        background-color: var(--retro-bg); /* Wheat background */
        padding: 1.5em; /* Internal padding around the cards */
        /* Adjusted text-shadow for better readability */
        text-shadow: 1px 1px 0 rgba(0, 0, 0, 0.3); /* Softer, single-pixel offset */
        box-sizing: border-box; /* Include padding in the element's total width and height */

        /* The iconic multi-layered box-shadow, adjusted for consistency */
        box-shadow:
            0 0 0 0.15em var(--retro-shadow-dark),
            0 0 0 0.3em var(--retro-secondary-light),
            0 0 0 0.45em var(--retro-shadow-dark),
            0 0.5em 0 0 var(--retro-accent-red), /* Red 3D shadow */
            0 0.5em 0 0.15em var(--retro-shadow-dark); /* Dark outline for 3D shadow */
        
        transition: transform var(--transition-fast) steps(1); /* Original transition for the box */
        
        display: flex; /* Makes cards inside flex items */
        flex-wrap: wrap; /* Allows cards to wrap to the next line */
        justify-content: space-between; /* Space out cards within the box */
        gap: 2rem; /* Consistent spacing between cards */
        animation: boxEntry 0.8s ease-out; /* Add an entry animation for the entire box */
    }

    @keyframes boxEntry {
        0% { opacity: 0; transform: translateY(30px) scale(0.95); }
        100% { opacity: 1; transform: translateY(0) scale(1); }
    }


    /* --- Individual Card: .retro-event-card --- */
    .retro-event-card {
        width: 350px; /* Fixed width as requested */
        /* Removed fixed height here to allow content to dictate height */
        padding: 10px; /* Slightly increased padding inside card */
        background: var(--retro-primary-teal); /* Card background color */
        border-radius: 15px;
        border: 2px solid var(--retro-shadow-dark); /* Black border */
        box-shadow: 0.2em 0.2em 0 var(--retro-shadow-light); /* Softer initial shadow */
        transition: all var(--transition-medium); /* Smooth transition for hover */
        position: relative;
        overflow: hidden;
        /* height: auto;  Already default, but good to be explicit */
        display: flex;
        flex-direction: column; /* Stacks image and body vertically */
        animation: cardFadeIn 0.6s ease-out backwards; /* Add a subtle entry animation for cards */
        /* Adjusted text-shadow for card content */
        text-shadow: 1px 1px 0 rgba(0, 0, 0, 0.2); /* Lighter, less pronounced shadow */
    }

    .retro-event-card:nth-child(even) { animation-delay: 0.1s; }
    .retro-event-card:nth-child(odd) { animation-delay: 0.2s; }

    @keyframes cardFadeIn {
        from { opacity: 0; transform: scale(0.95) translateY(10px); }
        to { opacity: 1; transform: scale(1) translateY(0); }
    }

    .retro-event-card:hover {
        transform: translateY(-5px) rotate(0deg) scale(1.02); /* Lift and slight scale */
        box-shadow: 0.4em 0.4em 0 var(--retro-shadow-dark); /* More pronounced shadow on hover */
    }

    .retro-event-card:active {
        animation: shake 0.5s ease-in-out; /* Shake animation from your original code */
    }

    @keyframes shake {
        0% { transform: translateX(0); }
        25% { transform: translateX(-5px); }
        50% { transform: translateX(5px); }
        75% { transform: translateX(-5px); }
        100% { transform: translateX(0); }
    }

    /* --- Card Image Styling --- */
    .card-image-container {
        width: 100%;
        height: 160px; /* Reduced height for image */
        border: 2px solid var(--retro-shadow-dark); /* Added border for visual consistency */
        border-radius: 10px; /* Slightly less rounded than card */
        overflow: hidden;
        margin-bottom: 10px; /* Reduced space between image and card body */
        background-color: var(--retro-secondary-light); /* Placeholder background */
    }

    .card-image-container img {
        height: 100%;
        width: 100%;
        object-fit: cover; /* Ensures image covers area without distortion */
        display: block; /* Remove extra space below image */
    }

    /* --- Card Body Section --- */
    /* Contains title, features, price, and button */
    .card-body-section {
        flex-grow: 1; /* Allows this section to take up remaining vertical space */
        position: relative;
        padding: 0 1em 1em; /* Adjusted padding */
        background-color: var(--retro-primary-teal); /* Uses the card background color */
        color: var(--retro-text); /* Text color for content inside */
        z-index: 2;
        border-top: 2px dashed rgba(0, 0, 0, 0.2); /* Dashed line effect */
        padding-top: 0.8em; /* Reduced space for the dashed line */
    }

    /* --- Card Title --- */
    .card-title h2 {
        font-family: var(--font-heading-retro); /* Apply retro font */
        font-size: 1.2em; /* Slightly reduced font size */
        font-weight: 700;
        margin-bottom: 0.8rem; /* Reduced margin */
        color: var(--retro-text);
        line-height: 1.2;
        text-align: center;
        /* Adjusted text-shadow for title */
        text-shadow: 2px 2px 0 rgba(0, 0, 0, 0.4); /* Subtle, clear shadow */
        word-break: break-word; /* Prevent long titles from overflowing */
    }

    /* --- Feature Grid --- */
    .feature-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(140px, 1fr)); /* Adjusted minmax for smaller features */
        gap: 0.8em; /* Reduced gap */
        margin-bottom: 1em; /* Reduced margin */
        padding: 0 0.5em; /* Small horizontal padding */
    }

    .feature-item {
        display: flex;
        align-items: center;
        gap: 0.5em; /* Reduced gap inside feature item */
        padding: 0.4em 0.6em; /* Reduced padding to fit more compactly */
        background: var(--retro-secondary-light); /* Light background for feature boxes */
        border: 0.12em solid var(--retro-shadow-dark);
        border-radius: 0.3em;
        box-shadow: 0.2em 0.2em 0 rgba(0, 0, 0, 0.2);
        transition: transform var(--transition-fast), box-shadow var(--transition-fast);
    }

    .feature-item:hover {
        transform: translateX(0.2em) translateY(-0.05em); /* Slight shift and lift */
        box-shadow: 0.25em 0.25em 0 rgba(0, 0, 0, 0.25);
    }

    .feature-icon {
        width: 1.3em; /* Slightly reduced icon size */
        height: 1.3em;
        display: flex;
        align-items: center;
        justify-content: center;
        background: var(--retro-accent-yellow); /* Yellow background for icons */
        border: 0.12em solid var(--retro-shadow-dark);
        border-radius: 0.3em;
        box-shadow: 0.2em 0.2em 0 rgba(0, 0, 0, 0.2);
        transition: all var(--transition-fast);
        flex-shrink: 0; /* Prevent icon from shrinking */
    }

    .feature-item:hover .feature-icon {
        background: var(--retro-accent-red); /* Change color on hover */
        transform: rotate(-5deg);
    }

    .feature-icon svg {
        width: 0.8em; /* Adjusted SVG size to match icon box */
        height: 0.8em;
        fill: var(--retro-text);
    }

    .feature-text {
        font-size: 0.8em; /* Slightly reduced font size */
        font-weight: 400;
        color: var(--retro-text);
        word-break: break-word; /* Ensure text wraps if too long */
        /* Removed text-shadow from here for maximum readability */
        text-shadow: none;
    }

    /* --- Card Actions (Price & Button) --- */
    .card-actions {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 1em; /* Reduced margin */
        padding-top: 0.8em; /* Reduced padding */
        border-top: 2px dashed rgba(0, 0, 0, 0.2);
        position: relative;
    }

    .card-actions::before {
        content: "✂"; /* Scissor icon */
        position: absolute;
        top: -0.8em;
        left: 50%;
        transform: translateX(-50%) rotate(90deg);
        background: var(--retro-primary-teal); /* Match card background */
        padding: 0 0.5em;
        font-size: 1em;
        color: rgba(0, 0, 0, 0.4);
    }

    .price {
        position: relative;
        font-family: var(--font-heading-retro); /* Retro font for price */
        font-size: 1.6em; /* Slightly reduced price font size */
        font-weight: 800;
        color: var(--retro-text);
        background: var(--retro-primary-teal); /* Match card background */
        line-height: 1; /* Adjust line height for better alignment */
        /* Adjusted text-shadow for price */
        text-shadow: 1px 1px 0 rgba(0, 0, 0, 0.3);
    }

    .price::before {
        content: "";
        position: absolute;
        bottom: 0.15em;
        left: 0;
        width: 100%;
        height: 0.2em;
        background: var(--retro-accent-yellow);
        z-index: -1;
        opacity: 0.8; /* Increased opacity for better visibility */
    }

    .price-currency {
        font-size: 0.6em;
        font-weight: 700;
        vertical-align: top;
        margin-right: 0.1em;
    }

    .price-period {
        display: block;
        font-family: var(--font-primary); /* Use normal font for "to join" */
        font-size: 0.4em;
        font-weight: 600;
        color: rgba(0, 0, 0, 0.7); /* Darker for readability */
        margin-top: 0.1em; /* Reduced margin */
        /* Removed text-shadow from here */
        text-shadow: none;
    }

    /* --- Card Button --- */
    .card-button {
        position: relative;
        background: var(--retro-bg); /* Wheat background for button */
        color: var(--retro-text);
        font-family: var(--font-heading-retro); /* Retro font for button text */
        font-size: 0.8em; /* Slightly reduced button font size */
        font-weight: 700;
        padding: 0.6em 1em; /* Reduced padding */
        border: 0.2em solid var(--retro-shadow-dark);
        border-radius: 0.4em;
        box-shadow: 0.3em 0.3em 0 var(--retro-shadow-dark); /* Shadow matches border color */
        cursor: pointer;
        transition: all var(--transition-fast);
        overflow: hidden;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        /* Adjusted text-shadow for button */
        text-shadow: 1px 1px 0 rgba(0, 0, 0, 0.4); /* Clearer shadow */
        text-decoration: none; /* Remove underline for links acting as buttons */
        display: inline-block; /* Ensure padding works correctly */
    }

    .card-button::before {
        content: "";
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(
            90deg,
            transparent 0%,
            rgba(255, 255, 255, 0.2) 50%,
            transparent 100%
        );
        transition: left var(--transition-slow);
        z-index: 1; /* Ensure the shimmer is above the button background */
    }

    .card-button:hover {
        background: var(--retro-accent-red); /* Red on hover */
        color: var(--retro-secondary-light); /* White text on hover */
        transform: translate(-0.1em, -0.1em);
        box-shadow: 0.4em 0.4em 0 var(--retro-shadow-dark);
        /* Adjusted text-shadow on hover for button */
        text-shadow: 1px 1px 0 rgba(0, 0, 0, 0.6); /* Slightly more pronounced when active */
    }

    .card-button:hover::before {
        left: 100%;
    }

    .card-button:active {
        transform: translate(0.1em, 0.1em);
        box-shadow: 0.15em 0.15em 0 var(--retro-shadow-dark);
    }

    /* --- Responsive Adjustments --- */
    /* Adjust general padding/margins */
    @media (max-width: 1200px) {
        .events-page-container {
            padding: 1.5rem;
        }
        .retro-events-box {
            gap: 1.5rem; /* Slightly reduce gap for better fit on narrower desktops */
            padding: 1em;
        }
    }

    /* Tablet and smaller desktops */
    @media (max-width: 992px) {
        .events-page-container {
            padding: 1rem;
        }
        .retro-events-box {
            gap: 1rem;
        }
        .retro-event-card {
            width: calc(50% - 1rem); /* Two cards per row, accounting for gap */
            max-width: 350px; /* Still constrain max width */
        }
        .card-image-container {
            height: 140px; /* Further reduce image height */
        }
        .card-title h2 {
            font-size: 1.1em;
        }
        .feature-text {
            font-size: 0.75em;
        }
        .price {
            font-size: 1.4em;
        }
        .card-button {
            font-size: 0.75em;
        }
    }

    /* Mobile devices */
    @media (max-width: 768px) {
        body {
            align-items: flex-start; /* Align to top when content is longer */
        }
        .events-page-container {
            padding: 1rem 0.5rem; /* Less horizontal padding */
        }
        .retro-events-box {
            padding: 0.8em;
            gap: 1.5rem; /* Maintain good spacing when stacked */
            flex-direction: column; /* Stack cards vertically */
            align-items: center; /* Center cards when stacked */
            box-shadow:
                0 0 0 0.1em var(--retro-shadow-dark), /* Slightly thinner outer border for mobile box */
                0 0 0 0.2em var(--retro-secondary-light),
                0 0 0 0.3em var(--retro-shadow-dark),
                0 0.3em 0 0 var(--retro-accent-red), /* Adjusted 3D shadow for mobile */
                0 0.3em 0 0.1em var(--retro-shadow-dark);
        }
        .retro-event-card {
            width: 95%; /* Allow cards to take up most of the width */
            max-width: 350px; /* But don't let them get wider than original spec */
            padding: 8px; /* Slightly less internal padding */
        }
        .card-image-container {
            height: 120px; /* Significantly reduced image height for small mobiles */
            margin-bottom: 8px;
        }
        .card-title h2 {
            font-size: 1em;
            margin-bottom: 0.6rem;
            /* Adjusted text-shadow for title on mobile */
            text-shadow: 1.5px 1.5px 0 rgba(0, 0, 0, 0.4);
        }
        .feature-grid {
            gap: 0.6em;
            margin-bottom: 0.8em;
        }
        .feature-item {
            padding: 0.3em 0.5em;
            gap: 0.4em;
        }
        .feature-icon {
            width: 1.1em;
            height: 1.1em;
        }
        .feature-icon svg {
            width: 0.7em;
            height: 0.7em;
        }
        .feature-text {
            font-size: 0.7em;
        }
        .card-actions {
            margin-top: 0.8em;
            padding-top: 0.6em;
        }
        .price {
            font-size: 1.3em;
        }
        .card-button {
            font-size: 0.7em;
            padding: 0.5em 0.8em;
        }
    }

    /* Very small mobile devices (e.g., iPhone 5/SE) */
    @media (max-width: 480px) {
        .events-page-container {
            padding: 0.5rem;
        }
        .retro-events-box {
            padding: 0.5em;
            gap: 1rem;
        }
        .retro-event-card {
            width: 100%; /* Take full width */
            border-radius: 10px; /* Slightly less rounded for very small screens */
        }
        .card-image-container {
            height: 100px; /* Minimum image height for very small screens */
        }
        .card-title h2 {
            font-size: 0.9em;
        }
        .feature-text {
            font-size: 0.65em;
        }
        .price {
            font-size: 1.1em;
        }
        .card-button {
            font-size: 0.6em;
            padding: 0.4em 0.7em;
        }
    }
</style>
