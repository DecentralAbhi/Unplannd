<% layout("/layouts/boilerplate") %>
<style>
    .entire-content{
        display: flex ;
        align-items: center;
        margin: 40px;
        justify-content: center;
        flex-wrap: wrap; /* Added for responsiveness if many cards */
    }
    .box{
        width: 100%;
        background-color: wheat;
        font-family: "Inter", sans-serif;
        font-size: 1em;
        background: wheat;
        color: #000;
        padding: 1em;
        image-rendering: pixelated;
        text-shadow: 1px 1px #000;
        box-shadow:
            0 0 0 0.15em #000,
            0 0 0 0.3em #fff,
            0 0 0 0.45em #000,
            0 0.5em 0 0 #d1451e,
            0 0.5em 0 0.15em #000;
        transition: transform 0.2s steps(1);
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
    }
    /* From Uiverse.io by 0xnihilism */
    .card {
        margin: 14px;
        width: 350px; /* Keep consistent width */
        padding: 5px;
        background: #2F9C95;
        border-radius: 15px;
        box-shadow: 0px 0px 0 #1F2937;
        border: 3px solid black;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
        height: auto; /* Changed from fixed height to auto to accommodate new content */
        display: flex; /* Added flex for internal layout */
        flex-direction: column; /* Stack image and body vertically */
    }
    .card:active {
        animation: shake 0.5s ease-in-out;
    }
    .card:hover {
        transform: rotate(0deg) scale(1.02);
        box-shadow: 10px 10px 0 #1F2937;
    }
    .card img{
        height: 200px; /* Fixed height for image */
        width: 100%;
        border-radius: inherit;
        object-fit: cover; /* Ensures image covers the area without distortion */
        margin-bottom: 10px; /* Space between image and new content */
    }

    /* CSS for the new card-body content from the second code */
    .card-body-section {
        --primary: #ff3e00;
        --primary-hover: #ff6d43;
        --secondary: wheat;
        --secondary-hover: #FF6A6B;
        --accent: #FFD93D;
        --text: #050505;
        --bg: #2F9C95;
        --shadow-color: #000000;
        --pattern-color: #cfcfcf;

        flex-grow: 1; /* Allows the body to take available space */
        position: relative;
        padding: 1.5em;
        padding-top: 0.1rem;
        background-color: var(--bg); /* Use background from the second card's variables */
        color: var(--text); /* Use text color from the second card's variables */
        z-index: 2;
        border-top: 0.15em dashed rgba(0, 0, 0, 0.15); /* Keep the dashed line effect */
        /* Removed margin-top: auto; as it's less critical without a fixed height and can cause issues with spacing if not carefully managed */
    }

    /* Removed .card-description CSS as the element is removed */

    .feature-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1em;
        margin-bottom: 1.5em; /* Keep this margin for spacing below the grid */
        margin-top: 0; /* Adjust or remove if the top spacing looks off without description */
    }

    .feature-item {
        display: flex;
        align-items: center;
        gap: 0.6em;
        transition: transform 0.2s ease;
    }

    .feature-item:hover {
        transform: translateX(0.3em);
    }

    .feature-icon {
        width: 1.4em;
        height: 1.4em;
        display: flex;
        align-items: center;
        justify-content: center;
        background: var(--secondary);
        border: 0.12em solid var(--text);
        border-radius: 0.3em;
        box-shadow: 0.2em 0.2em 0 rgba(0, 0, 0, 0.2);
        transition: all 0.2s ease;
    }

    .feature-item:hover .feature-icon {
        background: var(--secondary-hover);
        transform: rotate(-5deg);
    }

    .feature-icon svg {
        width: 0.9em;
        height: 0.9em;
        fill: #1F2937;
    }

    .feature-text {
        font-size: 0.85em;
        font-weight: 400;
        color: var(--text);
    }

    .card-actions {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 1.5em;
        padding-top: 1.2em;
        border-top: 0.15em dashed rgba(0, 0, 0, 0.15);
        position: relative;
    }

    .card-actions::before {
        content: "âœ‚";
        position: absolute;
        top: -0.8em;
        left: 50%;
        transform: translateX(-50%) rotate(90deg);
        background: var(--bg);
        padding: 0 0.5em;
        font-size: 1em;
        color: rgba(0, 0, 0, 0.4);
    }

    .price {
        position: relative;
        font-size: 1.8em;
        font-weight: 800;
        color: var(--text);
        background: var(--bg);
    }

    .price::before {
        content: "";
        position: absolute;
        bottom: 0.15em;
        left: 0;
        width: 100%;
        height: 0.2em;
        background: var(--accent);
        z-index: -1;
        opacity: 0.5;
    }

    .price-currency {
        font-size: 0.6em;
        font-weight: 700;
        vertical-align: top;
        margin-right: 0.1em;
    }

    .price-period {
        display: block;
        font-size: 0.4em;
        font-weight: 600;
        color: rgba(0, 0, 0, 0.6);
        margin-top: 0.2em;
    }

    .card-button {
        position: relative;
        background: var(--secondary);
        color: v#1F2937;
        font-size: 0.9em;
        font-weight: 700;
        padding: 0.7em 1.2em;
        border: 0.2em solid var(--text);
        border-radius: 0.4em;
        box-shadow: 0.3em 0.3em 0 var(--shadow-color);
        cursor: pointer;
        transition: all 0.2s ease;
        overflow: hidden;
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    .card-button::before {
        content: "";
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(
            90deg,
            transparent 0%,
            rgba(255, 255, 255, 0.2) 50%,
            transparent 100%
        );
        transition: left 0.6s ease;
    }

    .card-button:hover {
        background: var(--secondary-hover);
        transform: translate(-0.1em, -0.1em);
        box-shadow: 0.4em 0.4em 0 var(--shadow-color);
    }

    .card-button:hover::before {
        left: 100%;
    }

    .card-button:active {
        transform: translate(0.1em, 0.1em);
        box-shadow: 0.15em 0.15em 0 var(--shadow-color);
    }
</style>
