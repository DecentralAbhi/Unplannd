<% layout('layouts/boilerplate') %>

<style>
    /* Root CSS Variables for the Retro Theme */
    :root {
        --retro-bg: wheat; /* Main background from your box */
        --retro-text: #1F2937; /* Dark text for contrast */
        --retro-accent-red: #d1451e; /* From box shadow */
        --retro-accent-yellow: #FFD93D; /* From previous accent */
        --retro-primary-teal: #2F9C95; /* From your card background */
        --retro-secondary-light: #fff; /* From box shadow white */
        --retro-shadow-dark: #000; /* From box shadow black */
        --retro-shadow-light: rgba(0, 0, 0, 0.2); /* For softer elements */
    }

    /* --- General Layout --- */
    .profile-page-container {
        display: flex;
        justify-content: center; /* Center the entire content */
        align-items: flex-start; /* Align items to the top if they have different heights */
        padding: 2rem;
        background-color: var(--retro-bg);
        font-family: "Press Start 2P", cursive; /* Retro font for headings/titles */
        color: var(--retro-text);
        min-height: 100vh;
        flex-wrap: wrap; /* Allow wrapping for responsiveness */
        gap: 2rem; /* Gap between main sections (profile card and reviews) */
    }

    /* --- Retro Profile Card --- */
    .retro-profile-card {
        width: 380px; /* Slightly wider to accommodate content better */
        background: var(--retro-primary-teal);
        border-radius: 15px; /* From your card */
        padding: 1rem; /* Slightly reduced padding */
        box-shadow: 0px 0px 0 var(--retro-shadow-dark);
        border: 2px solid var(--retro-shadow-dark);
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
        display: flex;
        flex-direction: column;
        align-items: center; /* Center content horizontally */
        box-shadow:
            0 0 0 0.15em var(--retro-shadow-dark),
            0 0 0 0.3em var(--retro-secondary-light),
            0 0 0 0.45em var(--retro-shadow-dark),
            0 0.5em 0 0 var(--retro-accent-red),
            0 0.5em 0 0.15em var(--retro-shadow-dark); /* Applied from your .box */
        text-shadow: 1px 1px 0 rgba(0, 0, 0, 0.3);
        animation: bounceIn 0.8s ease-out; /* Add entry animation */
    }

    .retro-profile-card:hover {
        transform: translateY(-5px) rotate(0deg) scale(1.01); /* Lift effect and slight scale */
        box-shadow:
            0 0 0 0.15em var(--retro-shadow-dark),
            0 0 0 0.3em var(--retro-secondary-light),
            0 0 0 0.45em var(--retro-shadow-dark),
            0 0.8em 0 0 var(--retro-accent-red), /* More pronounced lift */
            0 0.8em 0 0.15em var(--retro-shadow-dark);
    }

    /* Animation for card entry */
    @keyframes bounceIn {
        0% { opacity: 0; transform: translateY(50px) scale(0.8); }
        60% { opacity: 1; transform: translateY(-10px) scale(1.05); }
        100% { transform: translateY(0) scale(1); }
    }


    /* Profile Image and Online Indicator */
    .profile-image-container {
        position: relative;
        width: 120px; /* Slightly smaller for compactness */
        height: 120px;
        border-radius: 50%;
        overflow: hidden;
        border: 3px solid var(--retro-accent-yellow);
        box-shadow: 0 4px 10px var(--retro-shadow-light);
        margin-bottom: 1rem;
        background-color: var(--retro-secondary-light); /* Background if image isn't perfect circle */
        transition: transform 0.3s ease;
    }

    .profile-image-container img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        display: block;
        image-rendering: pixelated; /* Ensure pixelated look for images */
    }

    .profile-image-container:hover {
        transform: scale(1.05) rotate(2deg); /* Added slight rotation */
    }

    /* Profile Text */
    .profile-info {
        text-align: center;
        margin-bottom: 1.5rem;
    }

    .profile-info h3 { 
        font-size: 1.4rem; /* More compact */
        font-weight: 700;
        color: var(--retro-text);
        margin-bottom: 0.2rem;
        text-shadow: 2px 2px 0 rgba(0, 0, 0, 0.4);
        font-family: "Press Start 2P", cursive;
    }

    .profile-info p { /* For email and username */
        font-size: 0.95rem; /* More compact */
        color: var(--retro-text);
        margin-bottom: 0.5rem;
        font-family: "Inter", sans-serif;
        text-shadow: none;
        word-break: break-all; /* Important for long emails/usernames */
    }

    /* Action Buttons */
    .profile-action-buttons {
        display: flex;
        flex-direction: row; /* Changed to row for side-by-side */
        gap: 0.8rem; /* Space between buttons */
        margin-top: 1rem;
        padding-top: 1rem;
        border-top: 0.15em dashed rgba(0, 0, 0, 0.15); /* Dashed line separator */
        width: 100%; /* Ensure it spans full width */
        justify-content: center; /* Center buttons horizontally */
        align-items: center; /* Align buttons vertically if they had different heights */
        flex-wrap: wrap; /* Allow buttons to wrap to next line on small screens */
    }

    .btn-retro-profile {
        display: inline-flex; /* Use flex to center text within button */
        align-items: center;
        justify-content: center;
        min-width: 150px; /* Reduced min-width to allow more flexibility */
        background-color: var(--retro-accent-red); /* Primary action color */
        color: var(--retro-secondary-light); /* White text */
        font-family: "Press Start 2P", cursive;
        font-size: 1.1em; /* Slightly larger font */
        padding: 0.8em 1.5em; /* Generous padding */
        border: 4px solid var(--retro-shadow-dark);
        border-radius: 15px;
        box-shadow: 0.5em 0.5em 0 var(--retro-shadow-dark); /* Prominent 3D shadow */
        cursor: pointer;
        transition: all 0.2s ease;
        text-shadow: 2px 2px 0 rgba(0, 0, 0, 0.5);
        letter-spacing: 1px;
        text-decoration: none; /* Remove underline for links */
        box-sizing: border-box; /* Include padding/border in width */
    }

    .btn-retro-profile:hover {
        background-color: var(--retro-accent-yellow); /* Change color on hover */
        color: var(--retro-text); /* Dark text on hover */
        transform: translateY(-5px); /* Lift effect */
        box-shadow: 0.7em 0.7em 0 var(--retro-shadow-dark); /* Enhanced shadow on hover */
    }

    .btn-retro-profile:active {
        transform: translateY(0); /* "Press down" effect */
        box-shadow: 0.2em 0.2em 0 var(--retro-shadow-dark); /* Reduced shadow when active */
    }

    /* --- Review Section --- */
    .retro-review-section {
        width: 380px; /* Consistent width with profile card */
        background: var(--retro-primary-teal);
        border-radius: 15px;
        padding: 1.5rem;
        box-shadow:
            0 0 0 0.15em var(--retro-shadow-dark),
            0 0 0 0.3em var(--retro-secondary-light),
            0 0 0 0.45em var(--retro-shadow-dark),
            0 0.5em 0 0 var(--retro-accent-red),
            0 0.5em 0 0.15em var(--retro-shadow-dark);
        text-shadow: 1px 1px 0 rgba(0, 0, 0, 0.3);
        display: flex;
        flex-direction: column;
        animation: bounceIn 1s ease-out 0.2s backwards; /* Staggered entry */
    }

    .retro-review-section h2 {
        font-family: "Press Start 2P", cursive;
        font-size: 1.2rem;
        color: var(--retro-text);
        margin-bottom: 1rem;
        padding-bottom: 0.5rem;
        border-bottom: 2px dashed var(--retro-accent-yellow);
        text-align: center;
        text-shadow: 2px 2px 0 rgba(0, 0, 0, 0.4);
    }

    .retro-review-item {
        background: var(--retro-secondary-light); /* Light background for review items */
        border: 2px solid var(--retro-shadow-dark);
        border-radius: 8px; /* Slightly less rounded */
        padding: 0.8rem 1rem;
        margin-bottom: 1rem;
        box-shadow: 0.2em 0.2em 0 rgba(0, 0, 0, 0.2);
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

    .retro-review-item:hover {
        transform: translateY(-3px) translateX(3px); /* Subtle shift on hover */
        box-shadow: 0.3em 0.3em 0 rgba(0, 0, 0, 0.3);
    }

    .retro-review-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        font-size: 0.85rem;
        margin-bottom: 0.4rem;
        color: var(--retro-text);
        font-weight: 600;
        font-family: "Inter", sans-serif;
        text-shadow: none;
    }

    .retro-review-stars {
        color: var(--retro-accent-yellow);
        letter-spacing: 1px;
        font-size: 1.1em; /* Slightly larger stars */
        text-shadow: none;
    }

    .retro-review-text {
        font-size: 0.8rem;
        color: var(--retro-text);
        line-height: 1.4;
        margin-bottom: 0.4rem;
        font-family: "Inter", sans-serif;
        text-shadow: none;
    }

    .retro-review-date {
        font-size: 0.7rem;
        color: var(--retro-text);
        text-align: right;
        font-family: "Inter", sans-serif;
        text-shadow: none;
    }

    .no-reviews-message {
        color: var(--retro-text);
        text-align: center;
        padding: 1rem;
        font-style: italic;
        font-family: "Inter", sans-serif;
        text-shadow: none;
    }

    /* --- Responsive Adjustments --- */
    @media (max-width: 850px) {
        .profile-page-container {
            flex-direction: column; /* Stack vertically on smaller screens */
            align-items: center; /* Center items when stacked */
        }
        .retro-profile-card,
        .retro-review-section {
            width: 90%; /* Max width for cards */
            max-width: 380px; /* Limit max width */
        }
    }

    @media (max-width: 480px) {
        .profile-page-container {
            padding: 1rem;
        }
        .retro-profile-card,
        .retro-review-section {
            padding: 1rem;
            width: 100%; /* Take full width on very small screens */
        }
        .profile-info h3 {
            font-size: 1.2rem;
        }
        .profile-action-buttons {
            flex-direction: column; /* Stack buttons vertically on very small screens */
        }
        .btn-retro-profile {
            min-width: unset; /* Remove min-width to allow full width */
            width: 100%; /* Take full width when stacked */
        }
    }
</style>

