<% layout("/layouts/boilerplate") %>

<style>
  .profile-section {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 4rem 1rem;
    background: linear-gradient(145deg, #2F9C95, #e8dcc4);
    min-height: 100vh;
    font-family: 'Inter', sans-serif;
  }

  .profile-card {
    background: rgba(255, 255, 255, 0.08);
    border: 1.5px solid rgba(255, 255, 255, 0.2);
    backdrop-filter: blur(18px);
    -webkit-backdrop-filter: blur(18px);
    border-radius: 1.5rem;
    padding: 2.5rem 2rem;
    max-width: 420px;
    width: 100%;
    text-align: center;
    color: #000;
    box-shadow:
      0 0 0 0.1em #000,
      0 0 0 0.2em #fff,
      0 0 0 0.3em #000,
      0 0.4em 0 0 #d1451e,
      0 0.4em 0 0.1em #000;
    position: relative;
  }

  .profile-img {
    position: relative;
    width: 120px;
    height: 120px;
    margin: 0 auto 1rem auto;
  }

  .profile-img img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 50%;
    border: 3px solid #fff;
    transition: transform 0.4s ease;
  }

  .profile-img:hover img {
    transform: scale(1.05);
  }

  .online-indicator {
    position: absolute;
    right: 8px;
    bottom: 8px;
    width: 16px;
    height: 16px;
    background: #00ff80;
    border: 2px solid white;
    border-radius: 50%;
    box-shadow: 0 0 8px 2px #00ff80;
    animation: pulse 1.5s infinite;
  }

  @keyframes pulse {
    0% {
      box-shadow: 0 0 8px 2px #00ff80;
    }
    50% {
      box-shadow: 0 0 12px 4px #00ff80;
    }
    100% {
      box-shadow: 0 0 8px 2px #00ff80;
    }
  }

  .profile-name {
    font-size: 1.6rem;
    font-weight: 700;
    margin-bottom: 0.3rem;
  }

  .profile-title {
    font-size: 1rem;
    font-weight: 500;
    color: rgba(0,0,0,0.6);
    margin-bottom: 1rem;
  }

  .profile-bio {
    font-size: 0.95rem;
    line-height: 1.5;
    margin-bottom: 1.5rem;
    color: #222;
  }

  .social-icons {
    display: flex;
    justify-content: center;
    gap: 1rem;
  }

  .social-icons a {
    display: flex;
    align-items: center;
    justify-content: center;
    background: wheat;
    border: 1.5px solid #000;
    border-radius: 50%;
    width: 38px;
    height: 38px;
    transition: all 0.3s ease;
    box-shadow: 0.2em 0.2em 0 #000;
  }

  .social-icons a:hover {
    background: #FF6A6B;
    transform: translateY(-3px);
    box-shadow: 0.3em 0.3em 0 #000;
  }

  .social-icons svg {
    width: 18px;
    height: 18px;
    fill: #1F2937;
  }

  @media (max-width: 600px) {
    .profile-card {
      padding: 2rem 1.2rem;
    }

    .profile-img {
      width: 100px;
      height: 100px;
    }
  }
</style>

<div class="profile-section">
  <div class="profile-card">
    <div class="profile-img">
      <img src="<%= user.profilePhoto || 'https://via.placeholder.com/120' %>" alt="<%= user.name || 'Profile' %>">
      <% if (user.isOnline) { %>
        <span class="online-indicator"></span>
      <% } %>
    </div>

    <div class="profile-name"><%= user.name || "Anonymous" %></div>
    <div class="profile-title"><%= user.title || "Frontend Developer" %></div>
    <p class="profile-bio"><%= user.bio || "Creative thinker, passionate coder, and team player with a knack for user-centric design." %></p>

    <div class="social-icons">
      <% if (user.twitter) { %>
        <a href="<%= user.twitter %>" target="_blank" aria-label="Twitter">
          <svg viewBox="0 0 24 24"><path d="M23 3a10.9 10.9 0 0 1-3.14 1.53A4.48 4.48 0 0 0 22.4.36a9.06 9.06 0 0 1-2.83 1.08A4.52 4.52 0 0 0 16.11 0C13.62 0 11.6 2.02 11.6 4.5c0 .35.04.7.11 1.03C7.69 5.33 4.07 3.54 1.64.83a4.48 4.48 0 0 0-.61 2.27c0 1.56.79 2.93 2.02 3.74A4.48 4.48 0 0 1 .8 6.1v.05c0 2.18 1.55 4 3.6 4.42a4.52 4.52 0 0 1-2.05.08c.58 1.8 2.26 3.11 4.25 3.15A9.06 9.06 0 0 1 0 19.54a12.79 12.79 0 0 0 6.92 2.03c8.3 0 12.85-6.87 12.85-12.83 0-.2 0-.39-.01-.58A9.1 9.1 0 0 0 23 3z"/></svg>
        </a>
      <% } %>

      <% if (user.linkedin) { %>
        <a href="<%= user.linkedin %>" target="_blank" aria-label="LinkedIn">
          <svg viewBox="0 0 24 24"><path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-4 0v7h-4v-7a6 6 0 0 1 6-6zM2 9h4v12H2z"/><circle cx="4" cy="4" r="2"/></svg>
        </a>
      <% } %>

      <% if (user.github) { %>
        <a href="<%= user.github %>" target="_blank" aria-label="GitHub">
          <svg viewBox="0 0 24 24"><path d="M12 .5C5.65.5.5 5.65.5 12c0 5.08 3.29 9.39 7.86 10.91.58.11.79-.25.79-.56v-2c-3.2.7-3.87-1.54-3.87-1.54-.53-1.35-1.3-1.71-1.3-1.71-1.06-.72.08-.71.08-.71 1.17.08 1.78 1.2 1.78 1.2 1.05 1.79 2.74 1.27 3.41.97.11-.76.41-1.27.74-1.56-2.56-.29-5.26-1.28-5.26-5.7 0-1.26.46-2.3 1.2-3.11-.12-.29-.52-1.45.11-3.02 0 0 .98-.31 3.2 1.18a11.09 11.09 0 0 1 5.83 0c2.22-1.5 3.2-1.18 3.2-1.18.63 1.57.23 2.73.11 3.02.75.81 1.2 1.85 1.2 3.11 0 4.43-2.7 5.4-5.27 5.68.42.36.79 1.09.79 2.2v3.26c0 .31.2.68.8.56A10.99 10.99 0 0 0 23.5 12C23.5 5.65 18.35.5 12 .5z"/></svg>
        </a>
      <% } %>
    </div>
  </div>
</div>
